---
// src/components/Section.astro
interface Props {
  title: string;
  level: number;
}

const { title, level } = Astro.props;

const Tag = `h${level}` as `h1` | `h2` | `h3` | `h4` | `h5` | `h6`;
---

<section>
  <Tag data-level={level}>
    {title}
  </Tag>
  <div>
    <slot />
  </div>
</section>
<style>
  section {
    margin-top: 2rem;
  }
  
  [data-level="2"], [data-level="3"], [data-level="4"] {
    color: var(--vp-c-text-1);
  }

  [data-level="2"] {
    font-size: 1.75rem;
    font-weight: 700;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    border-bottom: 1px solid var(--vp-c-divider);
    padding-bottom: 0.5rem;
  }

  [data-level="3"] {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  [data-level="4"] {
    font-size: 1.25rem;
    font-weight: 500;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
</style>
