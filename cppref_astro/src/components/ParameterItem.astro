---
// src/components/ParameterItem.astro
import CodeSpan from './CodeSpan.astro';
---
<div class="parameter-item">
  <dt>
    <CodeSpan inline highlighted={false}>
      <slot name="name" slot="value" />
    </CodeSpan>
  </dt>
  <dd>
    <slot name="description" slot="value" />
  </dd>
</div>
<style>
  .parameter-item {
    padding: 1rem 0;
    border-bottom: 1px solid var(--vp-c-divider);
    display: grid;
    grid-template-columns: 1fr;
    gap: 0.5rem;
  }

  @media (min-width: 768px) {
    .parameter-item {
      grid-template-columns: 1fr 3fr;
      gap: 1rem;
    }
  }

  dt {
    font-weight: 600;
  }

  dd {
    color: var(--vp-c-text-2);
  }
</style>
