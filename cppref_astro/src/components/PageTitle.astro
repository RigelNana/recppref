---
// src/components/PageTitle.astro
interface Props {
  lang?: 'c' | 'cpp';
}
const { lang = 'cpp' } = Astro.props;
---

<div class="page-title">
  <div class="title-line">
    <h1>
      <slot name="title" />
    </h1>
    {lang === 'c' && (
      <span class="lang-tag">
        C LIBRARY
      </span>
    )}
  </div>
  <p>
    <slot name="subtitle" />
  </p>
</div>
<style>
  .page-title {
    margin-bottom: 2rem;
  }
  .title-line {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--vp-c-text-1);
    line-height: 1.2;
  }
  @media (min-width: 768px) {
    h1 {
      font-size: 3rem;
    }
  }
  .lang-tag {
    font-size: 0.75rem;
    font-weight: 600;
    background-color: rgba(45, 212, 191, 0.1);
    color: #14b8a6;
    padding: 0.25rem 0.625rem;
    border-radius: 9999px;
  }
  p {
    font-size: 1.125rem;
    color: var(--vp-c-text-2);
    margin-top: 0.5rem;
  }
</style>
