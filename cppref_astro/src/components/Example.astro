---
// src/components/Example.astro
import CodeSpan from './CodeSpan.astro';
---
<div class="example">
  <h4>Example</h4>
  <div class="section">
    <p class="label">Code:</p>
    <CodeSpan multiline boxed>
      <slot name="code" slot="value" />
    </CodeSpan>
  </div>
  
  <div class="section">
    <p class="label">Description:</p>
    <div class="prose">
      <slot name="description" />
    </div>
  </div>
  
  <div class="section">
    <p class="label">Output:</p>
    <CodeSpan multiline boxed>
      <slot name="output" slot="value" />
    </CodeSpan>
  </div>
</div>
<style>
  .example {
    margin: 1.5rem 0;
    border: 1px solid var(--vp-c-border);
    border-radius: 8px;
    padding: 1rem;
    background-color: var(--vp-c-bg-soft);
  }

  h4 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--vp-c-text-1);
  }

  .section {
    margin-bottom: 1rem;
  }
  .section:last-child {
    margin-bottom: 0;
  }

  .label {
    font-size: 0.9rem;
    color: var(--vp-c-text-2);
    margin-bottom: 0.5rem;
  }

  .prose {
    /* Add basic prose styles here if needed */
  }

  /* You can add specific styles for the output CodeSpan block if you want it to look different */
</style>
