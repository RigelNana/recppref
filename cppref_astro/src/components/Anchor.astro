---
// src/components/Anchor.astro
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'h3'> {
  value: string;
}

const { value, ...rest } = Astro.props;

// Create a URL-friendly slug from the value
const id = value.toLowerCase().replace(/\s+/g, '-').replace(/[^\w-]+/g, '');
---

<h3 id={id} {...rest}>
  {value}
</h3>
<style>
  h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
    border-bottom: 1px solid var(--vp-c-divider);
    padding-bottom: 0.5rem;
    scroll-margin-top: 5rem;
  }
</style>
