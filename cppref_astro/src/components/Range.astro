---
// src/components/Range.astro
import CodeSpan from './CodeSpan.astro';

interface Props {
  left_bracket?: string;
  right_bracket?: string;
  plain?: boolean;
}

const { 
  left_bracket = '[',
  right_bracket = ']',
  plain = false
} = Astro.props;
---

<span class="range">
  <span>{left_bracket}</span>
  {plain ? (
    <span><slot name="from" /></span>
  ) : (
    <CodeSpan inline boxed><slot name="from" /></CodeSpan>
  )}
  <span>, </span>
  {plain ? (
    <span><slot name="to" /></span>
  ) : (
    <CodeSpan inline boxed><slot name="to" /></CodeSpan>
  )}
  <span>{right_bracket}</span>
</span>
<style>
  .range {
    display: inline-flex;
    align-items: baseline;
    gap: 0.25em;
  }
</style>
